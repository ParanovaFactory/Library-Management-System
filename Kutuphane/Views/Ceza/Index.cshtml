@using Kutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tblCeza>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h1>Cezalar</h1>
<table class="table table-striped" style="margin-top:10px">
    <tr style="background-color: rgb(252, 178, 22)">
        <th>Ceza Id</th>
        <th>Üye</th>
        <th>İşlem Id</th>
        <th>Tutar</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.tblUyeler.Ad @x.tblUyeler.Soyad</td>
            <td>@x.Hareket</td>
            <td>@x.Para</td>
            <td>@x.Durum</td>
            <td>
                <a href="/Ceza/Ode/@x.Id" class="btn btn-warning">Ceza Öde</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
